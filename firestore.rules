rules_version = '2';

// ============================================================
// COSMOS FIRESTORE SECURITY RULES - ADAPTED FOR YOUR SCHEMA
// Last Updated: January 2026
// ============================================================
//
// CRITICAL: Deploy these rules immediately!
// Run: firebase deploy --only firestore:rules
//
// ADAPTED FOR:
// - journal_entries collection (not journals)
// - authorId field in proofs (not userId)
// - podSlug field (not podId)
// - Array-based pod membership (users.joinedPods[])
// - customPods collection support
// ============================================================

service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // HELPER FUNCTIONS
    // ========================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user owns this document by uid field
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check if user is the author (for proofs with authorId field)
    function isAuthor() {
      return isAuthenticated() && request.auth.uid == resource.data.authorId;
    }

    // Check if user is a member of a pod (using array-based membership)
    function isPodMember(podSlug) {
      return isAuthenticated() &&
        podSlug in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.joinedPods;
    }

    // Validate string field length
    function validString(field, minLen, maxLen) {
      return field is string &&
             field.size() >= minLen &&
             field.size() <= maxLen;
    }

    // Check if data has required field
    function hasField(data, field) {
      return field in data && data[field] != null;
    }

    // Rate limiting: max 10 writes per minute per user
    // Note: Requires rateLimits collection to be updated by Cloud Functions
    function notRateLimited() {
      return !exists(/databases/$(database)/documents/rateLimits/$(request.auth.uid)) ||
             get(/databases/$(database)/documents/rateLimits/$(request.auth.uid)).data.count < 10;
    }

    // Check if user is a moderator (by email domain or specific emails)
    function isModerator() {
      return isAuthenticated() &&
        (request.auth.token.email.matches('.*@cosmos\\.app$') ||
         request.auth.token.email in ['admin@example.com']);
    }

    // ========================================
    // USER PROFILES
    // ========================================
    match /users/{userId} {
      // Anyone authenticated can read basic profile info
      allow read: if isAuthenticated();

      // Only owner can create their profile
      allow create: if isOwner(userId) &&
                       validUserCreateData(request.resource.data);

      // Only owner can update their profile
      allow update: if isOwner(userId) &&
                       validUserUpdateData(request.resource.data) &&
                       // Prevent changing immutable fields
                       (!('createdAt' in request.resource.data.diff(resource.data).affectedKeys()) &&
                        !('uid' in request.resource.data.diff(resource.data).affectedKeys()));

      // Users can only delete their own profile
      allow delete: if isOwner(userId);

      // Validation for creating a new user profile
      function validUserCreateData(data) {
        return data.uid == request.auth.uid &&
               validString(data.displayName, 1, 100) &&
               data.email is string &&
               (data.bio == null || data.bio is string) &&
               (data.photoURL == null || data.photoURL is string) &&
               (data.joinedPods == null || data.joinedPods is list) &&
               (data.goals == null || data.goals is list);
      }

      // Validation for updating user profile (more permissive)
      function validUserUpdateData(data) {
        return validString(data.displayName, 1, 100) &&
               (data.bio == null || data.bio is string) &&
               (data.photoURL == null || data.photoURL is string) &&
               (data.joinedPods == null || data.joinedPods is list) &&
               (data.goals == null || data.goals is list);
      }

      // User's private settings
      match /private/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // ========================================
    // PROOFS (LEARNING LOGS)
    // Adapted: uses authorId, podSlug, content fields
    // ========================================
    match /proofs/{proofId} {
      // Users can always read their own proofs
      // This rule is query-friendly for: where('authorId', '==', uid)
      allow read: if isAuthenticated() &&
                    request.auth.uid == resource.data.authorId;

      // Authenticated users can read public proofs
      allow read: if isAuthenticated() &&
                    resource.data.visibility == 'public';

      // Pod members can read proofs in their pod
      allow read: if isAuthenticated() &&
                    isPodMember(resource.data.podSlug);

      // Users can create proofs for themselves
      allow create: if isAuthenticated() &&
                       request.resource.data.authorId == request.auth.uid &&
                       validProofData(request.resource.data) &&
                       notRateLimited();

      // Users can update their own proofs (within 24 hours)
      allow update: if isAuthor() &&
                       validProofData(request.resource.data) &&
                       proofIsRecent(resource.data);

      // Users can delete their own proofs
      allow delete: if isAuthor();

      function validProofData(data) {
        return validString(data.content, 1, 2000) &&
               data.authorId == request.auth.uid &&
               validString(data.podSlug, 1, 100) &&
               data.type in ['text', 'link', 'image'] &&
               data.visibility in ['public', 'private'];
      }

      function proofIsRecent(data) {
        // Allow updates within 24 hours of creation
        return request.time.toMillis() - data.createdAt < 86400000;
      }

      // Proof likes (stored as array in proof document, so no subcollection needed)
    }

    // ========================================
    // JOURNAL ENTRIES (PRIVATE REFLECTIONS)
    // Adapted: collection is journal_entries, uses userId
    // ========================================
    match /journal_entries/{entryId} {
      // STRICTLY PRIVATE - only owner can access
      allow read: if isOwner(resource.data.userId);

      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       validJournalData(request.resource.data);

      allow update: if isOwner(resource.data.userId) &&
                       validJournalData(request.resource.data);

      allow delete: if isOwner(resource.data.userId);

      function validJournalData(data) {
        return validString(data.content, 1, 5000) &&
               (data.mood == null || data.mood in
                ['Calm', 'Focused', 'Stressed', 'Anxious', 'Happy', 'Tired', 'Motivated', 'Grateful']);
      }
    }

    // ========================================
    // PODS (DEFAULT PODS - READ ONLY)
    // Default pods are defined in code, this is for metadata
    // ========================================
    match /pods/{podSlug} {
      // Anyone authenticated can read pod info
      allow read: if isAuthenticated();

      // Only admins/moderators can modify pods
      allow create, update, delete: if isModerator();
    }

    // ========================================
    // CUSTOM PODS (USER-CREATED)
    // ========================================
    match /customPods/{podId} {
      // Anyone authenticated can read custom pods
      allow read: if isAuthenticated();

      // Users can create custom pods
      allow create: if isAuthenticated() &&
                       request.resource.data.createdBy == request.auth.uid &&
                       validCustomPodData(request.resource.data);

      // Only creator or moderator can update
      allow update: if (isOwner(resource.data.createdBy) || isModerator()) &&
                       validCustomPodData(request.resource.data);

      // Only creator or moderator can delete
      allow delete: if isOwner(resource.data.createdBy) || isModerator();

      function validCustomPodData(data) {
        return validString(data.name, 3, 100) &&
               validString(data.slug, 3, 100) &&
               (data.description == null || validString(data.description, 0, 500));
      }
    }

    // ========================================
    // POD STATS (DENORMALIZED COUNTERS)
    // ========================================
    match /podStats/{podSlug} {
      // Anyone authenticated can read stats
      allow read: if isAuthenticated();

      // Only cloud functions should update stats
      // Client writes are blocked to prevent manipulation
      allow write: if false;
    }

    // ========================================
    // POD STATS AGGREGATED (CLOUD FUNCTION MANAGED)
    // ========================================
    match /podStatsAggregated/{podSlug} {
      // Anyone authenticated can read aggregated stats
      allow read: if isAuthenticated();

      // Only cloud functions should update stats
      // Client writes are blocked to prevent manipulation
      allow write: if false;
    }

    // ========================================
    // THREADS (POD DISCUSSIONS)
    // ========================================
    match /threads/{threadId} {
      // Pod members can read threads
      allow read: if isAuthenticated();

      // Pod members can create threads
      allow create: if isAuthenticated() &&
                       isPodMember(request.resource.data.podSlug) &&
                       validThreadData(request.resource.data) &&
                       notRateLimited();

      // Only author can update their thread
      allow update: if isOwner(resource.data.authorId) &&
                       validThreadData(request.resource.data);

      // Author or moderator can delete
      allow delete: if isOwner(resource.data.authorId) || isModerator();

      function validThreadData(data) {
        return validString(data.title, 3, 200) &&
               validString(data.content, 1, 10000) &&
               data.authorId == request.auth.uid;
      }

      // Thread replies
      match /replies/{replyId} {
        allow read: if isAuthenticated();

        allow create: if isAuthenticated() &&
                         validReplyData(request.resource.data) &&
                         notRateLimited();

        allow update: if isOwner(resource.data.authorId);

        allow delete: if isOwner(resource.data.authorId) || isModerator();

        function validReplyData(data) {
          return validString(data.content, 1, 5000) &&
                 data.authorId == request.auth.uid;
        }
      }
    }

    // ========================================
    // ACCOUNTABILITY PARTNERS
    // ========================================
    match /accountabilityPartners/{partnershipId} {
      // Both partners can read
      allow read: if isAuthenticated() &&
                    (request.auth.uid == resource.data.userId ||
                     request.auth.uid == resource.data.partnerId);

      // Users can create partnership requests
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       notRateLimited();

      // Partners can update status (accept/reject)
      allow update: if isAuthenticated() &&
                       (request.auth.uid == resource.data.userId ||
                        request.auth.uid == resource.data.partnerId) &&
                       validPartnershipUpdate(request.resource.data);

      // Either partner can end the partnership
      allow delete: if isAuthenticated() &&
                       (request.auth.uid == resource.data.userId ||
                        request.auth.uid == resource.data.partnerId);

      function validPartnershipUpdate(data) {
        return data.status in ['pending', 'active', 'ended', 'rejected'];
      }
    }

    // ========================================
    // PARTNERSHIP REQUESTS (for accountability)
    // ========================================
    match /partnershipRequests/{requestId} {
      allow read: if isAuthenticated() &&
                    (request.auth.uid == resource.data.fromUserId ||
                     request.auth.uid == resource.data.toUserId);

      allow create: if isAuthenticated() &&
                       request.resource.data.fromUserId == request.auth.uid;

      allow update: if isAuthenticated() &&
                       request.auth.uid == resource.data.toUserId;

      allow delete: if isAuthenticated() &&
                       (request.auth.uid == resource.data.fromUserId ||
                        request.auth.uid == resource.data.toUserId);
    }

    // ========================================
    // CHAT CONVERSATIONS
    // ========================================
    match /conversations/{conversationId} {
      // Participants can read
      allow read: if isAuthenticated() &&
                    request.auth.uid in resource.data.participants;

      // Users can create conversations they're part of
      allow create: if isAuthenticated() &&
                       request.auth.uid in request.resource.data.participants &&
                       request.resource.data.participants.size() == 2;

      // Participants can update (mark as read, etc.)
      allow update: if isAuthenticated() &&
                       request.auth.uid in resource.data.participants;

      // No deletion (soft delete only)
      allow delete: if false;

      // Chat messages
      match /messages/{messageId} {
        allow read: if isAuthenticated() &&
                      request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;

        allow create: if isAuthenticated() &&
                         request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
                         validMessageData(request.resource.data) &&
                         notRateLimited();

        // Messages can be edited within 5 minutes
        allow update: if isOwner(resource.data.senderId) &&
                         messageIsRecent(resource.data);

        // Sender can delete their messages
        allow delete: if isOwner(resource.data.senderId);

        function validMessageData(data) {
          return validString(data.text, 1, 5000) &&
                 data.senderId == request.auth.uid;
        }

        function messageIsRecent(data) {
          return request.time.toMillis() - data.timestamp.toMillis() < 300000; // 5 minutes
        }
      }
    }

    // ========================================
    // CHALLENGES (WEEKLY)
    // ========================================
    match /challenges/{challengeId} {
      allow read: if isAuthenticated();
      allow write: if isModerator(); // Admin only

      // Challenge participants
      match /participants/{participantId} {
        allow read: if isAuthenticated();

        allow create: if isOwner(participantId) &&
                         challengeIsActive(challengeId);

        allow update: if isOwner(participantId);

        allow delete: if isOwner(participantId);
      }

      function challengeIsActive(challengeId) {
        let challenge = get(/databases/$(database)/documents/challenges/$(challengeId));
        return challenge.data.endDate > request.time;
      }
    }

    // ========================================
    // EVENTS (COMMUNITY EVENTS)
    // ========================================
    match /events/{eventId} {
      // Anyone authenticated can read events
      allow read: if isAuthenticated();

      // Authenticated users can create events
      allow create: if isAuthenticated() &&
                       request.resource.data.createdBy == request.auth.uid &&
                       validEventData(request.resource.data);

      // Creator can update, or any authenticated user can update attendees (RSVP)
      allow update: if isAuthenticated() &&
                       (isOwner(resource.data.createdBy) ||
                        // Allow RSVP: only attendees array can be modified by others
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees']));

      // Only creator or moderator can delete
      allow delete: if isOwner(resource.data.createdBy) || isModerator();

      function validEventData(data) {
        return validString(data.title, 3, 200) &&
               validString(data.description, 1, 2000) &&
               data.category in ['workshop', 'livestream', 'discussion', 'coworking', 'challenge', 'other'] &&
               data.date is number &&
               data.duration is number && data.duration >= 15 && data.duration <= 480 &&
               data.maxAttendees is number && data.maxAttendees >= 2 && data.maxAttendees <= 100 &&
               data.createdBy == request.auth.uid;
      }
    }

    // ========================================
    // COWORKING ROOMS
    // ========================================
    match /coworkingRooms/{roomId} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated() &&
                       validRoomData(request.resource.data);

      allow update: if isAuthenticated() &&
                       (isOwner(resource.data.hostId) ||
                        request.auth.uid in resource.data.participants);

      allow delete: if isOwner(resource.data.hostId);

      function validRoomData(data) {
        return validString(data.name, 3, 100) &&
               data.maxParticipants >= 2 && data.maxParticipants <= 10 &&
               data.hostId == request.auth.uid;
      }

      // Room messages
      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && notRateLimited();
        allow update, delete: if isOwner(resource.data.authorId);
      }
    }

    // ========================================
    // NOTIFICATIONS
    // ========================================
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isOwner(resource.data.userId);

      // System creates notifications (could allow user-to-user later)
      allow create: if isAuthenticated() &&
                       request.resource.data.userId != request.auth.uid;

      // Users can mark as read
      allow update: if isOwner(resource.data.userId) &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);

      // Users can delete their notifications
      allow delete: if isOwner(resource.data.userId);
    }

    // ========================================
    // RATE LIMITING (INTERNAL)
    // ========================================
    match /rateLimits/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; // Cloud function only
    }

    // ========================================
    // ACHIEVEMENTS (READ-ONLY FOR USERS)
    // ========================================
    match /achievements/{achievementId} {
      allow read: if isAuthenticated();
      allow write: if false; // System managed
    }

    // ========================================
    // ANALYTICS (WRITE-ONLY FOR USERS)
    // ========================================
    match /analytics/{eventId} {
      allow read: if false; // Admin only

      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       validAnalyticsEvent(request.resource.data);

      allow update, delete: if false;

      function validAnalyticsEvent(data) {
        return validString(data.event, 1, 100) &&
               data.keys().size() <= 20;
      }
    }

    // ========================================
    // CATCH-ALL: DENY EVERYTHING ELSE
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
